    'A Major': ['x', 0, 2, 2, 2, 0],
    'B Major': ['x', 2, 4, 4, 4, 2],
    'C Major': ['x', 3, 2, 0, 1, 0],
    'D Major': ['x', 'x', 0, 2, 3, 2],
    'E Major': [0, 2, 2, 1, 0, 0],
    'F Major': [1, 3, 3, 2, 0, 1],
    'G Major': [3, 2, 0, 0, 0, 3],
    'A# Major': ['x', 1, 3, 3, 3, 1],
    'C# Major': ['x', 4, 6, 6, 6, 4],
    'D# Major': ['x', 6, 8, 8, 8, 6],
    'F# Major': [2, 4, 4, 3, 0, 2],
    'G# Major': [4, 6, 6, 5, 0, 4],
    'A Minor': ['x', 0, 2, 2, 1, 0],
    'B Minor': ['x', 2, 4, 4, 3, 2],
    'C Minor': ['x', 3, 5, 5, 4, 3],
    'D Minor': ['x', 'x', 0, 2, 3, 1],
